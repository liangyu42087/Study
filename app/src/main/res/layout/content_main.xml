<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".ui.food.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/food_name_et"/>

    <TextView
            android:text="@string/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/food_price_et"
            app:layout_constraintBottom_toBottomOf="@+id/food_price_et"/>

    <TextView
            android:text="@string/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_price_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/food_name_et"
            app:layout_constraintBottom_toBottomOf="@+id/food_name_et"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/_10"
            android:ems="10"
            android:id="@+id/food_price_et" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/food_name_tv"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/pizza"
            android:ems="10"
            android:id="@+id/food_name_et" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/food_price_et"
            app:layout_constraintStart_toStartOf="@+id/food_price_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>